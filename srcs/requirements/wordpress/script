
wp config create \
    --path=/var/www/html \
    --dbname=wordpress \
    --dbuser=wordpress \
    --dbpass=wordpress \
    --dbhost=localhost \
    --skip-check \
    --allow-root


wp core install \
    --path=/var/www/html \
    --url=seonjo.42.fr \
    --title=seonjo \
    --admin_user=seonjo \
    --admin_password=password \
    --admin_email=seonjo@student.42seoul.kr \
    --allow-root


# www.conf 파일 수정
# 듣기 포트 9000번으로 변경
# php-fpm이 환경변수를 초기화하지 않도록 설치
echo "clear_env = no" >> /etc/php/8.2-fpm/pool.d/www.conf
