
wp config create \
    --path=/var/www/html \
    --dbname=wordpress \
    --dbuser=wordpress \
    --dbpass=wordpress \
    --dbhost=localhost \
    --skip-check \
    --allow-root


chmod -R 777 /var/www

sudo sed -i 's/listen = \/run\/php\/php8.2-fpm.sock/listen = 9000/g' /etc/php/8.2/fpm/pool.d/www.conf


# www.conf 파일 수정
# 듣기 포트 9000번으로 변경
# php-fpm이 환경변수를 초기화하지 않도록 설치
echo "clear_env = no" >> /etc/php/8.2-fpm/pool.d/www.conf
